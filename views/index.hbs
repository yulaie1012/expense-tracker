<div class="col-8 mx-auto">
  <div class="text-left mb-4">
    <h1>總金額：{{totalAmount}}</h1>
  </div>
</div>

<div class="col-10 mx-auto">
  {{#each records}}
  <div class="d-flex align-items-center border-bottom border-dark mb-3">
    <div class="col-2 text-right">
      <span style="font-size: 2em;">
        <i class="fas fa-utensils"></i>
      </span>
    </div>
    <div class="col-5">
      <h3>{{this.name}}</h3>
      <span style="font-size: 1em;">{{this.date}}</span>
    </div>
    <div class="col-2 text-right">
      <span style="font-size: 2em;">
        {{this.amount}}
      </span>
    </div>
    <div class="col-3 text-right">
      <a href="/records/{{this._id}}/edit" class="btn btn-outline-dark">修改</a>
      <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-outline-dark">刪除</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>
<div class="text-center">
  <a href="/records/new" class="btn btn-dark btn-lg">新增支出</a>
</div>