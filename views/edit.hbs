<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div>
    <label for="name">名稱*：</label>
    <input type="text" name="name" id="name" value="{{record.name}}" required>
  </div>
  <div>
    <label for="date">日期*：</label>
    <input type="date" name="date" id="date" value="{{record.date}}" required>
  </div>
  <div>
    <label for="category">類別*：</label>
    <select name="category" id="category" required>
      <option disabled selected value="">請選擇類別</option>
      <option value="家居物業" {{#if (isEqual record.category "家居物業")}}selected{{/if}}>家居物業</option>
      <option value="交通出行" {{#if (isEqual record.category "交通出行")}}selected{{/if}}>交通出行</option>
      <option value="休閒娛樂" {{#if (isEqual record.category "休閒娛樂")}}selected{{/if}}>休閒娛樂</option>
      <option value="餐飲食品" {{#if (isEqual record.category "餐飲食品")}}selected{{/if}}>餐飲食品</option>
      <option value="其他" {{#if (isEqual record.category "其他")}}selected{{/if}}>其他</option>
    </select>
  </div>
  <div>
    <label for="amount">金額*：</label>
    <input type="number" name="amount" id="amount" min="0" value="{{record.amount}}" required>
  </div>
  <button type="submit">新增支出</button>
</form>