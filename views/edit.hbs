<div class="col-md-6 m-auto">
  <div class="card card-body">
    <h1 class="text-center mt-1">修改支出</h1>
    <p class="lead">*為必填欄位</p>
    <form action="/records/{{record._id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">名稱*：</label>
        <input class="form-control" type="text" name="name" id="name" value="{{record.name}}" required>
      </div>
      <div class="form-group">
        <label for="date">日期*：</label>
        <input class="form-control" type="date" name="date" id="date" value="{{record.date}}" required>
      </div>
      <div class="form-group">
        <label for="category">類別*：</label>
        <select class="custom-select" name="category" id="category" required>
          <option disabled selected value="">請選擇類別</option>
          <option value="家居物業" {{#if (isEqual record.categoryId.name "家居物業")}}selected{{/if}}>家居物業</option>
          <option value="交通出行" {{#if (isEqual record.categoryId.name "交通出行")}}selected{{/if}}>交通出行</option>
          <option value="休閒娛樂" {{#if (isEqual record.categoryId.name "休閒娛樂")}}selected{{/if}}>休閒娛樂</option>
          <option value="餐飲食品" {{#if (isEqual record.categoryId.name "餐飲食品")}}selected{{/if}}>餐飲食品</option>
          <option value="其他" {{#if (isEqual record.categoryId.name "其他" )}}selected{{/if}}>其他</option>
        </select>
      </div>
      <div class="form-group">
        <label for="amount">金額*：</label>
        <input type="number" class="form-control" name="amount" id="amount" min="0" value="{{record.amount}}" required>
      </div>
      <button type="submit" class="btn btn-outline-dark btn-block">送出</button>
    </form>
  </div>
</div>